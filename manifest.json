{
  "manifest_version": 3,
  "name": "X Infinite Scroll Stopper",
  "version": "1.6.9",
  "description": "Stop and control infinite scrolling on X Twitter.",
  "permissions": ["declarativeNetRequest", "storage", "tabs"],
  "host_permissions": ["*://*.x.com/*", "*://*.twitter.com/*"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "homepage_url": "https://github.com/freaktofen/X-Infinite-Scroll-Stopper"
}